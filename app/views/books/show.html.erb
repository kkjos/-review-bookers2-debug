<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @new_book %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>

  		<div class = "book_comment" >
  		  <%= render 'book_comments/book_comment', book: @book %>
  		</div>

      <div>
        <%= form_with model:[@book, @comment], remote:true do |f| %>
        <%= f.text_area :comment, row:'5', class: "inputComment" %></br>
        <%= f.submit "送信する" %>
        <% end %>
      </div>
    </div>
  </div>
</div>